@namespace AutoSzereloMuhely.Client.Layout

<div class="sidebar">
    <div class="menu-header d-flex justify-content-between align-items-center px-3 py-2">
        <span class="fw-bold">AutoSzereloMuhely</span>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>

    <div class="@NavMenuCssClass pt-3">
        <nav class="nav flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="bi bi-menu-up me-2" ></i>  Kezdőlap
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="ugyfelek">
                    <i class="bi bi-file-earmark-person-fill me-2"></i> Ügyféleink
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
